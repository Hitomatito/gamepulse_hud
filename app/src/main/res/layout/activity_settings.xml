<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="28dp"
        android:paddingBottom="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuraci贸n de GamePulse HUD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:maxWidth="600dp" />

        <!-- Reset Button - Positioned prominently -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="32dp"
            android:text=" Restablecer Configuraci贸n"
            android:backgroundTint="@color/button_secondary"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Text Settings Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:maxWidth="600dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="22dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="锔 Configuraci贸n de Texto"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <!-- Text Size -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tama帽o del texto"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <SeekBar
                        android:id="@+id/seekBarTextSize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="20" />

                    <TextView
                        android:id="@+id/tvTextSizeValue"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="16sp"
                        android:textColor="@color/primary_text"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Text Color -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color del texto"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <!-- Color Sliders -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="R"
                            android:textColor="#FF0000"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/seekBarColorRed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="255"
                            android:progress="255" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="G"
                            android:textColor="#00FF00"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/seekBarColorGreen"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="255"
                            android:progress="255" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="B"
                            android:textColor="#0000FF"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/seekBarColorBlue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="255"
                            android:progress="255" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Color Preview -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vista previa: "
                        android:textColor="@color/secondary_text" />
                    <View
                        android:id="@+id/viewColorPreview"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="#FFFFFF"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Font Style Configuration -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estilo de fuente"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_background">

                    <Spinner
                        android:id="@+id/spinnerFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@android:color/transparent" />
                </FrameLayout>

                <!-- Font Weight Configuration -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peso de fuente"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_background">

                    <Spinner
                        android:id="@+id/spinnerFontWeight"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@android:color/transparent" />
                </FrameLayout>

                <!-- Font Sample Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vista previa del texto"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvFontSample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FPS: 60 | CPU: 45掳C | GPU: 55掳C"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:padding="12dp"
                    android:background="@drawable/sample_text_background"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Options Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:maxWidth="600dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="22dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Elementos a Mostrar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mostrar FPS"
                        android:textColor="@color/primary_text" />

                    <Switch
                        android:id="@+id/switchShowFps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mostrar Temperatura CPU"
                        android:textColor="@color/primary_text" />

                    <Switch
                        android:id="@+id/switchShowCpuTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mostrar Temperatura GPU"
                        android:textColor="@color/primary_text" />

                    <Switch
                        android:id="@+id/switchShowGpuTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Appearance Settings Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:maxWidth="600dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="22dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Apariencia"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <!-- Background Opacity -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opacidad del fondo"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <SeekBar
                        android:id="@+id/seekBarBackgroundOpacity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="80" />

                    <TextView
                        android:id="@+id/tvBackgroundOpacityValue"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="80%"
                        android:textColor="@color/primary_text"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Corner Radius -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Radio de esquinas"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <SeekBar
                        android:id="@+id/seekBarCornerRadius"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="50"
                        android:progress="8" />

                    <TextView
                        android:id="@+id/tvCornerRadiusValue"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="8dp"
                        android:textColor="@color/primary_text"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Position Settings Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:maxWidth="600dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="22dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Posici贸n en Pantalla"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <!-- Position X -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Posici贸n Horizontal (X)"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <SeekBar
                        android:id="@+id/seekBarPositionX"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="1000"
                        android:progress="100" />

                    <TextView
                        android:id="@+id/tvPositionXValue"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="100px"
                        android:textColor="@color/primary_text"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Position Y -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Posici贸n Vertical (Y)"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <SeekBar
                        android:id="@+id/seekBarPositionY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="2000"
                        android:progress="300" />

                    <TextView
                        android:id="@+id/tvPositionYValue"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="300px"
                        android:textColor="@color/primary_text"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
